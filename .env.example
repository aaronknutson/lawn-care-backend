# ===========================================
# GreenScape Lawn Care Backend Configuration
# ===========================================

# Server Configuration
NODE_ENV=production
PORT=5000

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=greenscape_lawn_care
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/greenscape_lawn_care

# JWT Configuration
# IMPORTANT: Generate secure random strings for production
# You can generate them with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Frontend URL (for CORS)
# Set this to your frontend domain in production (e.g., https://greenscape.com)
FRONTEND_URL=http://localhost:5173

# Stripe Configuration (Payment Processing)
# Get your keys from: https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_...) for development and live keys (sk_live_...) for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Google Maps API
# Get your key from: https://console.cloud.google.com/google/maps-apis/credentials
# Enable the following APIs: Maps JavaScript API, Places API, Geocoding API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Weather API (OpenWeatherMap)
# Get your key from: https://openweathermap.org/api
# Free tier available for development and small-scale production
WEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Auto-Seed Database (Docker Deployment)
# Set to 'true' to automatically seed the database with demo data on first startup
# Set to 'false' or remove this line for production after initial seeding
AUTO_SEED=true
